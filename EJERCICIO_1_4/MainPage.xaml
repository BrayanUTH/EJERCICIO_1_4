<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EJERCICIO_1_4.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout VerticalOptions="Center"
                 Spacing="30">

        <Button Text="Registrar" 
                CornerRadius="10" 
                HorizontalOptions="Center"
                BackgroundColor="Black"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"
                TextTransform="None"
                WidthRequest="200"
                x:Name="btnViewRegister"
                Clicked="btnViewRegister_Clicked"/>
        
        <Button Text="Listado" 
                CornerRadius="10" 
                HorizontalOptions="Center"
                BackgroundColor="Black"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"
                TextTransform="None"
                WidthRequest="200"
                x:Name="btnViewList"
                Clicked="btnViewList_Clicked"/>

    </StackLayout>

</ContentPage>
